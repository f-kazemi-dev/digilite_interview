{
  "info": {
    "name": "Ticket System API",
    "description": "API collection for Ticket System backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"yourpassword\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth",
              "host": ["{{base_url}}"],
              "path": ["auth"]
            }
          }
        }
      ]
    },
    {
      "name": "Tickets",
      "item": [
        {
          "name": "Get All Tickets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets?status=open&search=issue&$limit=10&$skip=0&$sort[field]=createdAt&$sort[direction]=DESC",
              "host": ["{{base_url}}"],
              "path": ["tickets"],
              "query": [
                {
                  "key": "status",
                  "value": "open"
                },
                {
                  "key": "search",
                  "value": "issue"
                },
                {
                  "key": "$limit",
                  "value": "10"
                },
                {
                  "key": "$skip",
                  "value": "0"
                },
                {
                  "key": "$sort[field]",
                  "value": "createdAt"
                },
                {
                  "key": "$sort[direction]",
                  "value": "DESC"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Ticket",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/:id",
              "host": ["{{base_url}}"],
              "path": ["tickets", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"New Issue\",\n    \"description\": \"Description of the issue\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets",
              "host": ["{{base_url}}"],
              "path": ["tickets"]
            }
          }
        },
        {
          "name": "Update Ticket",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\": \"closed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets/:id",
              "host": ["{{base_url}}"],
              "path": ["tickets", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Ticket",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/:id",
              "host": ["{{base_url}}"],
              "path": ["tickets", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Replies",
      "item": [
        {
          "name": "Get Ticket Replies",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/replies?ticketId=1",
              "host": ["{{base_url}}"],
              "path": ["replies"],
              "query": [
                {
                  "key": "ticketId",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Reply",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/replies/:id",
              "host": ["{{base_url}}"],
              "path": ["replies", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Reply",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"ticketId\": 1,\n    \"content\": \"This is a reply message\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/replies",
              "host": ["{{base_url}}"],
              "path": ["replies"]
            }
          }
        }
      ]
    },
    {
      "name": "WebSocket",
      "item": [
        {
          "name": "Connect to WebSocket",
          "request": {
            "method": "WS",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "ws://{{base_url}}/replies",
              "host": ["ws://{{base_url}}"],
              "path": ["replies"]
            },
            "description": "Connect to WebSocket for real-time replies"
          }
        },
        {
          "name": "Subscribe to Ticket Replies",
          "request": {
            "method": "WS",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "ws://{{base_url}}/replies?ticketId=1",
              "host": ["ws://{{base_url}}"],
              "path": ["replies"],
              "query": [
                {
                  "key": "ticketId",
                  "value": "1"
                }
              ]
            },
            "description": "Subscribe to real-time updates for a specific ticket's replies"
          }
        },
        {
          "name": "Send Reply via WebSocket",
          "request": {
            "method": "WS",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "ws://{{base_url}}/replies",
              "host": ["ws://{{base_url}}"],
              "path": ["replies"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"type\": \"create\",\n    \"data\": {\n        \"ticketId\": 1,\n        \"content\": \"This is a real-time reply message\"\n    }\n}"
            },
            "description": "Send a new reply through WebSocket connection"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "localhost:3030"
    },
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN"
    }
  ]
} 