{
  "host": "0.0.0.0",
  "port": "PORT",
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "secret": "JWT_SECRET",
    "strategies": ["jwt", "local"],
    "path": "/authentication",
    "service": "users",
    "jwt": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "subject": "anonymous",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    }
  },
  "postgres": {
    "client": "pg",
    "connection": {
      "host": "DB_HOST",
      "port": "DB_PORT",
      "user": "admin",
      "password": "admin123",
      "database": "support_tickets"
    }
  }
} 